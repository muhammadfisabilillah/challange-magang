// File: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 1. Tabel User (Untuk Login Admin)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
}

// 2. Tabel Kategori (Induk)
model Category {
  id          Int       @id @default(autoincrement())
  name        String
  description String?   @db.Text
  products    Product[] // Relasi ke banyak Produk
  createdAt   DateTime  @default(now())
}

// 3. Tabel Produk (Anak)
model Product {
  id         Int      @id @default(autoincrement())
  name       String
  price      Int
  stock      Int
  categoryId Int // Foreign Key (Penghubung)
  category   Category @relation(fields: [categoryId], references: [id])
  createdAt  DateTime @default(now())
}
